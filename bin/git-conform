#!/usr/bin/env ruby

$LOAD_PATH.unshift File.join(File.dirname(__FILE__), '..', 'lib')

begin
  require 'git-conform'
rescue LoadError
  require 'rubygems'
  require 'git-conform'
end

options = Trollop::options do

  version Git::Conform::COPYRIGHT
  banner Git::Conform::BANNER

end

app = begin
  Git::Conform::App.new(Dir.pwd)
rescue RuntimeError
  raise unless $!.message == "The given path is not a valid Git repository\n(error code -7)"
  nil
end

unless app
  STDERR.puts "Error: \"#{Dir.pwd}\" is not a git working directory... exiting!"
  exit -1
end

fail "Coming soon!"

# That's all, Folks!
